{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "worsp",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#variable-declarations"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.worsp",
          "match": "\\b(if|while|for|return)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.worsp",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.worsp",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "name": "comment.line.worsp",
      "begin": ";",
      "end": "\\n"
    },
    "function-calls": {
      "begin": "\\(",
      "end": "\\)",
      "contentName": "meta.function-call.yourlisp",
      "patterns": [
        {
          "name": "entity.name.function.yourlisp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "captures": {
            "0": {
              "name": "entity.name.function.worsp"
            }
          }
        },
        {
          "name": "variable.parameter.worsp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "variable-declarations": {
      "begin": "\\(",
      "end": "\\)",
      "contentName": "meta.function-call.worsp",
      "patterns": [
        {
          "name": "entity.name.function.worsp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "captures": {
            "0": {
              "name": "entity.name.function.worsp"
            }
          }
        },
        {
          "name": "variable.parameter.worsp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.worsp"
}
