{
  "name": "worsp-vscode",
  "displayName": "worsp-vscode",
  "description": "VSCode extension for worsp lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/sosukesuzuki/worsp-vscode"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "worsp",
        "aliases": [
          "worsp",
          "worsp"
        ],
        "extensions": [
          ".wsp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "worsp",
        "scopeName": "source.worsp",
        "path": "./syntaxes/worsp.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "prettier": "^3.0.3"
  },
  "scripts": {
    "format": "prettier --write ."
  }
}
